    <path refid="library.jutils-1.0.0.classpath"/>
    <path refid="library.jinput-platform-2.0.5-natives-linux.classpath"/>
    <path refid="library.jinput-platform-2.0.5-natives-windows.classpath"/>
    <path refid="library.jinput-platform-2.0.5-natives-osx.classpath"/>
    <path refid="library.desktop.desktop-1.1.classpath"/>
  </path>
  
  <path id="desktop.module.classpath">
    <path refid="${module.jdk.classpath.desktop}"/>
    <pathelement location="${desktop.output.dir}"/>
    <pathelement location="${core.testoutput.dir}"/>
    <pathelement location="${core.output.dir}"/>
    <path refid="library.gdx-1.9.6.classpath"/>
    <path refid="library.gdx-freetype-1.9.6.classpath"/>
    <path refid="library.core.core-1.1.classpath"/>
    <path refid="library.gdx-backend-lwjgl-1.9.6.classpath"/>
    <path refid="library.gdx-platform-1.9.6-natives-desktop.classpath"/>
    <path refid="library.gdx-freetype-platform-1.9.6-natives-desktop.classpath"/>
    <path refid="library.lwjgl-2.9.2.classpath"/>
    <path refid="library.lwjgl_util-2.9.2.classpath"/>
    <path refid="library.jlayer-1.0.1-gdx.classpath"/>
    <path refid="library.jorbis-0.0.17.classpath"/>
    <path refid="library.lwjgl-platform-2.9.2-natives-windows.classpath"/>
    <path refid="library.lwjgl-platform-2.9.2-natives-linux.classpath"/>
    <path refid="library.lwjgl-platform-2.9.2-natives-osx.classpath"/>
    <path refid="library.jinput-2.0.5.classpath"/>
    <path refid="library.jutils-1.0.0.classpath"/>
    <path refid="library.jinput-platform-2.0.5-natives-linux.classpath"/>
    <path refid="library.jinput-platform-2.0.5-natives-windows.classpath"/>
    <path refid="library.jinput-platform-2.0.5-natives-osx.classpath"/>
    <path refid="library.desktop.desktop-1.1.classpath"/>
  </path>
  
  <path id="desktop.runtime.module.classpath">
    <pathelement location="${desktop.testoutput.dir}"/>
    <pathelement location="${desktop.output.dir}"/>
    <path refid="core.runtime.module.classpath"/>
    <path refid="library.gdx-backend-lwjgl-1.9.6.classpath"/>
    <path refid="library.gdx-platform-1.9.6-natives-desktop.classpath"/>
    <path refid="library.gdx-freetype-platform-1.9.6-natives-desktop.classpath"/>
    <path refid="library.gdx-1.9.6.classpath"/>
    <path refid="library.gdx-freetype-1.9.6.classpath"/>
    <path refid="library.lwjgl-2.9.2.classpath"/>
    <path refid="library.lwjgl_util-2.9.2.classpath"/>
    <path refid="library.jlayer-1.0.1-gdx.classpath"/>
    <path refid="library.jorbis-0.0.17.classpath"/>
    <path refid="library.lwjgl-platform-2.9.2-natives-windows.classpath"/>
